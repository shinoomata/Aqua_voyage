<div class="drawer">
  <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <!-- Navbar -->
    <div class="navbar bg-customBlue w-full mb-header-space">
      <div class="flex-none lg:hidden">
        <label for="my-drawer-3" aria-label="open sidebar" class="btn btn-square btn-ghost">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block h-6 w-6 stroke-current">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </label>
      </div>
      <div class="mx-2 flex-1 px-2 text-white">AQUA VOYAGEは水族館を検索・記録できるサービスです。</div>
      <div class="hidden flex-none lg:block">
        <ul class="menu menu-horizontal text-white">
          <li><%= link_to 'ホーム', root_path %></li>
          <li><%= link_to '水族館一覧', aquariums_path %></li>
          <% if user_signed_in? %>
            <li><%= button_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'ログイン（認証）', new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="drawer-side">
    <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul class="menu bg-customBlue min-h-full w-80 p-4 text-white">
      <!-- Sidebar content here -->
      <li><%= link_to 'ホーム', root_path %></li>
      <li><%= link_to '水族館一覧', aquariums_path %></li>
      <% if user_signed_in? %>
        <li><%= button_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'ログイン（認証）', new_user_session_path %></li>
      <% end %>
    </ul>
  </div>
</div>
