<body class="bg-customBackground flex items-center justify-center min-h-screen">
  <div class="container mx-auto p-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold text-center mb-6"><%= @aquarium.name %>にレビューを投稿</h1>

    <%= form_with(model: [@aquarium, @review], local: true, html: { class: 'space-y-4' }) do |form| %>
      <% if @review.errors.any? %>
        <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
          <h2 class="font-bold mb-2"><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
          <ul class="list-disc pl-5">
            <% @review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <p class="font-medium">大人向け？子供向け？</p>
        <% @target_audiences.each do |audience| %>
          <label class="block">
            <%= form.radio_button :target_audience_id, audience.id, class: "radio radio-info mr-2" %>
            <%= audience.content %>
          </label>
        <% end %>
      </div>

      <div class="space-y-2">
        <p class="font-medium">水族館の大きさは？</p>
        <% @size_ratings.each do |rating| %>
          <label class="block">
            <%= form.radio_button :size_rating_id, rating.id, class: "radio radio-info mr-2" %>
            <%= rating.size %>
          </label>
        <% end %>
      </div>

      <div class="space-y-2">
        <p class="font-medium">見どころはショー？展示？</p>
        <% @highlights.each do |highlight| %>
          <label class="block">
            <%= form.radio_button :highlight_id, highlight.id, class: "radio radio-info mr-2" %>
            <%= highlight.highlight_kind %>
          </label>
        <% end %>
      </div>

      <div class="space-y-2">
        <%= form.label :content, "私の推しポイント", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :content, placeholder: "この水族館の好きなところ、思い出などを自由に書いてね", class: "input input-bordered input-lg input-info w-full max-w-xs" %>
      </div>

      <div class="text-center">
        <%= form.submit "レビューを投稿", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to '戻る', aquarium_path(@aquarium), class: "btn btn-secondary" %>
    </div>
  </div>
</body>
